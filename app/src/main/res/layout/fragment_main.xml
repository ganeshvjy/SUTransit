<LinearLayout
    android:id="@+id/LinearInit"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <Button
        android:id="@+id/SearchBus"
        android:text="Search Bus"
        android:layout_height="wrap_content"
        android:layout_width="170dp">
        </Button>

    <Button
        android:id="@+id/NearestStop"
        android:text="Nearest Stop"
        android:layout_height="wrap_content"
        android:layout_width="170dp">
        </Button>

    <Button
        android:id="@+id/NotifyMe"
        android:text="Notify Me"
        android:layout_height="wrap_content"
        android:layout_width="170dp">
        </Button>

    <Button
        android:id="@+id/SpecialSchedules"
        android:text="Special Schedules"
        android:layout_height="wrap_content"
        android:layout_width="170dp">
        </Button>

    <Button
        android:id="@+id/BusTracker"
        android:text="Bus Tracker"
        android:layout_height="wrap_content"
        android:layout_width="170dp">
        </Button>

</LinearLayout>
